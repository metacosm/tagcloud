<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean class="org.jahia.modules.tagcloud.actions.FilterFromTag">
        <property name="name" value="filterFromTag"/>
    </bean>

    <bean class="org.jahia.modules.tagcloud.conditions.TagVisibilityCondition">
        <property name="associatedNodeType" value="metacosm:tagCondition"/>
        <property name="requiredFieldNamesForTemplate">
            <list>
                <value>tag</value>
            </list>
        </property>
    </bean>
</beans>